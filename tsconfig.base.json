{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@poalim/shared-interfaces": ["libs/shared/interfaces/src/index.ts"],
      "@poalim/client-data-access": ["libs/client/data-access/src/index.ts"],
      "@poalim/bot-engine": ["libs/server/bot-engine/src/index.ts"],
      "@poalim/socket-handler": ["libs/server/socket-handler/src/index.ts"],
      "@poalim/interfaces": ["shared/interfaces/src/index.ts"],
      "@poalim/constants": ["shared/constants/src/index.ts"],
      "@poalim-challenge/feature-chat": ["client/src/index.ts"],
      "@poalim-challenge/shared-pipes": ["shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
